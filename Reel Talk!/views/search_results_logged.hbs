<!DOCTYPE html>
<html>
	<head>
		<title>Reel Talk!</title>
		<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
		<!-- Bootstrap link -->
		
		<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
		<link rel="stylesheet" href="css/style.css">
		<link rel="stylesheet" href="css/review_card.css" />
		<link rel="stylesheet" href="css/navbar.css">
		<link rel="stylesheet" href="css/overlays.css">
		<link rel="stylesheet" href="css/carousel.css">
		
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@100;200;300;400;500;600;700;800;900&display=swap" rel="stylesheet">
		<!-- For icons from Font Awesome website -->
		<script src="https://kit.fontawesome.com/d3e3786cbe.js" crossorigin="anonymous"></script>
	</head>
	
	<body>
	
	<!-- This part is all about the navigation bar -->
	<div class="nav-bar-bg">
		<div class="wrapper">
			<nav>
				<a href="logged_in.html"><img src="assets/1.png" class="logo" alt="logo" /></a>
				
				<div class="searchbar">
					<input type="text" class="search-bar" id="search" name="search">
				</div>
				<button class="searchbutton" id="searchbutton" onclick="location.href='search_results.html'"></button>
				
				<ul class="nav-items">
					<li id="movies" onclick="showDropdown(this.id)">Movies</li>
					<li id="tv-shows" onclick="showDropdown(this.id)">TV Shows</li>
					<li id="anime" onclick="showDropdown(this.id)">Anime</li>
					<li><a href="#" onclick="SignUpOverlayOn()">SIGN UP</a></li>
					<li><a href="#" onclick="LoginOverlayOn()">LOG IN</a></li>
				</ul>
			</nav>
		</div>

		<div id="nav-dropdown-wrapper">
			<div class="dropdown-pane genre-pane">
				<p>Genres:</p>
				<div class="nav-dropdown">
					<div class="genre-col">
						<a href="#">Action</a>
						<a href="#">Comedy</a>
						<a href="#">Drama</a>
						<a href="#">Fantasy</a>
					</div>
					<div class="genre-col">
						<a href="#">Thriller</a>
						<a href="#">Romance</a>
						<a href="#">Mystery</a>
						<a href="#">Horror</a>
					</div>
				</div>
			</div>
			
			<div class="dropdown-pane sortby-pane">
				<p>Sort by:</p>
				<div class="nav-dropdown">
					<div>
						<a id="dropdown-top-something" href="#">Top Movies</a>
						<a href="#">Trending</a>
						<a href="#">New Releases</a>
					</div>
				</div>
			</div>
		</div>

	</div>
	
	
	<!-- OVERLAY AREAS || THE THINGS THAT POP UP -->
	<div id="darkoverlay"></div>
	
	<!-- The "Oops...get an account first" Pop Up -->
	<div id="oops">
			<h1 class="createaccount">Oops... You need to log in first</h1>
			<h1><a class="cancelbutton" href="#" onclick="oopsoff()">X</a></h1>
				<p class="oops">In order to enjoy the full features</p><br>
				<p class="oops-p">Already have an account?</p>
				<button class="oops" onclick="LoginOverlayOn()">Log In</button>
				<p class="oops-p">OR</p>
				<hr class="oops1">
				<hr class="oops2">
				
				<p class="oops-p">Donâ€™t have an account yet? </p>
				<button class="oops" onclick="SignUpOverlayOn()">Sign Up</button>
	</div>
	
	
	
	
	<!-- The SignUp overlay when signup button is pressed -->
		<div id="signup">
			<h1 class="createaccount">Create a new account</h1>
			<h1><a class="cancelbutton" href="#" onclick="SignUpOverlayOff()">X</a></h1>
			
			<!-- Email Address -->
			<div class="createaccount-area">
				<p class="createaccount-area">Email Address:</p>
				<input type="text" class="createaccount-area" id="email" name="email"> 
			</div>
			
			<!-- Username -->
			<div class="createaccount-area">
				<p class="createaccount-area">Username:</p>
				<input type="text" class="createaccount-area" id="username" name="username"> 
			</div>
			
			<!-- Password -->
			<div class="createaccount-area">
				<p class="createaccount-area">Password:</p>
				<input type="password" class="createaccount-area" id="password" name="password"> 
			</div>
			
			<!-- Retype Password -->
			<div class="createaccount-area">
				<p class="createaccount-area">Retype Password:</p>
				<input type="password" class="createaccount-area" id="repassword" name="repassword"> 
			</div>
			
			<button class="createaccount-area" onclick="SignUpSuccess()">Sign Up</button>
		</div>
	
	
	<!-- The Log in overlay when Log in button is pressed -->
		<div id="login">
			<h1 class="createaccount">Sign in to your account</h1>
			<h1><a class="cancelbutton" href="#" onclick="LoginOverlayOff()">X</a></h1>
			
			<!-- Email Address -->
			<div class="createaccount-area">
				<p class="createaccount-area">Email Address:</p>
				<input type="text" class="createaccount-area" id="email" name="email"> 
			</div>
			
			<!-- Password -->
			<div class="createaccount-area">
				<p class="createaccount-area">Password:</p>
				<input type="password" class="createaccount-area" id="password" name="password"> 
			</div>
			
			<button class="createaccount-area" onclick="LoginSuccess()">Log In</button>
		</div>
	
	
	
	<!-- The Successful Registration Pop Up -->
	<div id="signup-success">
			<h1 class="createaccount">Thank you for registering</h1>
			
				<p class="signup-success">You can now create posts, comment, create watchlists, etc.</p>
				<p class="signup-success">Now, proceed to the log in page to sign in</p>
				
			<button class="signup-success" onclick="SignUpSuccessClose()">Proceed to Log In</button>
	</div>
	
	
	<!-- The Successful Log In Pop Up -->
	<div id="login-success">
			<h1 class="createaccount">Successfully Logged In!</h1>
			
				<p class="signup-success">You can now create posts, comment, create watchlists, etc.</p>
				<p class="signup-success">Now, proceed to the main page</p>
				
			<button class="signup-success" onclick="location.href = 'logged_in.html'">Proceed to Main Page</button>
	</div>
	
	
	
	
	<!-- THE END OF ALL OVERLAYS -->
	
	
	
	<!-- This part is the main page where the posts and stuff are located -->
	<div id="main-center">
		<div class="main-wrapper">
			<h1 class="header-texts">Search Results</h1>

			<div class="carousel-background">
				<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
					<div class="carousel-inner">

					  <!-- Carousel Item (ACTIVE) -->
						<div class="carousel-item active">
							<div class="carousel-item-box">
								<img src="assets/Movie Posters/hunger_games_1.jpg">
								<div class="carousel-item-info">
									<h3>The Hunger Games (2012)</h3>
									<div class="carousel-item-genres">
										<p>Action</p>
										<p>Drama</p>
										<p>Thriller</p>
									</div>
									<p>Katniss Everdeen voluntarily takes her younger sister's place in the Hunger Games: a televised competition in which two teenagers from each of the twelve Districts of Panem are chosen at random to fight to the death.</p>
									<button onclick="oops()">Add to Watchlist</button>
								</div>
							</div>
						</div>

						{{#each carousel_items}}
							{{> carousel_item}}
						{{/each}}					  

					</div>

					<a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
					  <span class="carousel-control-prev-icon" aria-hidden="true"></span>
					  <span class="sr-only">Previous</span>
					</a>
					<a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
					  <span class="carousel-control-next-icon" aria-hidden="true"></span>
					  <span class="sr-only">Next</span>
					</a>
				  </div>
			</div>

			<div class="main">

				<!-- This part is the area where the posts will be placed-->
				<div class="postarea">
					<!-- Review Cards -->
					{{> review_card}}	<!-- TEMPORARY -->
					{{#each review}}
						{{> review_card}}
					{{/each}}
				</div>

				<!-- This part is the Watchlist pane -->
				<!-- Should hold a max of 15 watchlists only -->
				<div class="watchlist-pane">
					<h1>My Watchlists</h1>

					{{> watchlist_pane_item}}	<!-- TEMPORARY -->
					{{#each watchlist}}
						{{> watchlist_pane_item}}
					{{/each}}

					<button id="to-watchlists" onclick="location.href='User Profile Collections.html'">
						View All Watchlists
					</button>
				</div>

			</div>		
		</div>
	</div>
	
	<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    <script src="js/main.js"></script>
	</body>
</html>
		