<div class="in-watchlist">
    <div class="in-watchlist-img-wrapper">
        <img src="{{image}}" alt="Watchlist item poster">

        {{#if edit}}
        <div class="in-watchlist-overlay">
            <div id="remove-in-watchlist-item" class="remove-in-watchlist-item" onclick="removeFromWatchlist('{{showId}}', '{{watchlistId}}'); this.parentElement.parentElement.parentElement.remove();">Remove</div>
        </div>
        {{/if}}
    </div>

    <div class="in-watchlist-info">
        <h2>{{title}} ({{year}})</h2>
        <div class="in-watchlist-genres">
            <p>{{genre}}</p>
        </div>
        <p>{{description}}</p>
    </div>
</div>