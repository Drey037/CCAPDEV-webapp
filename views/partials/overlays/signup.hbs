<div id="signup">
    <h1 class="createaccount">Create a new account</h1>
    <h1><a class="cancelbutton" onclick="SignUpOverlayOff()">X</a></h1>

    <form action="/signup" method = "post">
    <!-- Email Address -->
    <div class="createaccount-area">
        <p class="createaccount-area">Email Address:</p>
        <input type="text" class="createaccount-area" id="signup-email" name="signup-email"> 
    </div>
    
    <!-- Username -->
    <div class="createaccount-area">
        <p class="createaccount-area">Username:</p>
        <input type="text" class="createaccount-area" id="signup-username" name="signup-username"> 
    </div>
    
    <!-- Password -->
    <div class="createaccount-area">
        <p class="createaccount-area">Password:</p>
        <input type="password" class="createaccount-area" id="signup-password" name="signup-password"> 
    </div>
    
    <!-- Retype Password -->
    <div class="createaccount-area">
        <p class="createaccount-area">Retype Password:</p>
        <input type="password" class="createaccount-area" id="repassword" name="repassword"> 
    </div>
    
    <button class="createaccount-area" type = "submit">Sign Up</button>
    </form>
</div>