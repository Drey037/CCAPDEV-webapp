<div id="new-watchlist">
    <h1>Create New Watchlist</h1>
    <p>Collection Name:</p>
    <form action="/new-watchlist" method = "post">
        <input name="watchlist_name" type="text" placeholder="Watchlist name">
        <textarea name="watchlist_description" id="new-watchlist-textarea" cols="30" rows="10" placeholder="Enter a description here..."></textarea>
        <button id="new-watchlist-save" onclick="NewWatchlistOff()" type = "submit">Save</button>
    </form>
    <button id="new-watchlist-cancel" onclick="NewWatchlistOff()">Cancel</button>
</div>