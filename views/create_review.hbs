<!DOCTYPE html>
<html>
	<head>
		<title>Reel Talk!</title>
		<base href="/">
		<link rel="stylesheet" href="css/navbar.css">
		<link rel="stylesheet" href="css/style.css" />
		<link rel="stylesheet" href="css/review_card.css" />
		<link rel="stylesheet" href="css/watchlist_card.css" />
		<link rel="stylesheet" href="css/watchlist_sidepane.css" />
		<link rel="stylesheet" href="css/carousel.css">
		<link rel="stylesheet" href="css/overlays.css">
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@100;200;300;400;500;600;700;800;900&display=swap" rel="stylesheet">
		<script src="https://kit.fontawesome.com/d3e3786cbe.js" crossorigin="anonymous"></script>
	</head>
	<body>
	
	<!-- Navigation bar -->
	{{#if username}}
		{{> navbar_logged}}
	{{else}}
		{{> navbar}}
	{{/if}}

	<!-- This part is the main page where the posts and stuff are located -->
	<div id="main-center">
		<div class="main-wrapper">
			<h1 class="header-texts">Create a New Review</h1>
			<div class="main">

				<div class="carousel-item-box create-review-item-box">
					<img src="{{image}}">
					<div class="carousel-item-info create-review-item-info">
						<h3>{{title}} ({{year}})</h3>
						<div class="carousel-item-genres">
							<p>{{genre}}</p>
						</div>

						<form action="/create-review" method="post">
							<textarea name="description" id="review-narrative" placeholder="Write a review here..."></textarea>
							<input type="hidden" name="showId" value="{{showId}}">
							<p>Rating:</p>
							<select name="rating" id="create-review-rating">
								<option value="1">1</option>
								<option value="2">2</option>
								<option value="3">3</option>
								<option value="4">4</option>
								<option value="5">5</option>
							</select>
							<div class="carousel-item-buttons">
								<button id="reel-it" type="submit">Reel It!</button>
								<button class="cancel-review" onclick="location.href=/">Cancel</button>
							</div>
						</form>

					</div>
				</div>
					
			</div>		
		</div>
	</div>
	<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script>
	<script src="js/main.js"></script>
	</body>
</html>