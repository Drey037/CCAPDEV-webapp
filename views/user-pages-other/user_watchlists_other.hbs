<!DOCTYPE html>

<html>
	<head>
		<title>Reel Talk!</title>
		<link rel="stylesheet" href="../css/style.css" />
		<link rel="stylesheet" href="../css/navbar.css" />
		<link rel="stylesheet" href="../css/overlays.css">
		<link rel="stylesheet" href="../css/watchlist_card.css" />
		<link rel="stylesheet" href="../css/profile_card.css" />


		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@100;200;300;400;500;600;700;800;900&display=swap" rel="stylesheet">
		<script src="https://kit.fontawesome.com/d3e3786cbe.js" crossorigin="anonymous"></script>
	</head>
	
	<body>
	
	<!-- This part is all about the navigation bar -->
	{{#if logged_in}}
		{{> navbar_logged}}
	{{else}}
		{{> navbar}}
	{{/if}}
	
	<!-- The User Tab -->
	<div class="usertab">
		<button id = "usertabbutton-reviews" class="inactive" onclick= "location.href = '/user-reviews/{{userId}}'">Reviews</button>
		<button id = "usertabbutton-collections" class="active" onclick= "location.href = '/user-watchlists/{{userId}}'">Watchlists</button>
	</div>


	<!-- OVERLAY AREAS || THE THINGS THAT POP UP -->
	<div id="darkoverlay"></div>
	{{#if logged_in}}
		{{> overlays/add_to_watchlist}}
		{{> overlays/new_watchlist}}
	{{else}}
		{{> overlays/oops}}
	{{/if}}



	<!-- This part is the main page where the posts and stuff are located -->
	<div id="main-center">
		<div class="main-wrapper">
			<div class="main">

				<div class="postarea">
					{{#if watchlist}}
						{{#each watchlist}}
							{{> watchlist_card}}
						{{/each}}
					{{else}}
						<h4 class="none-found">This user hasn't made any watchlists.</h4>
					{{/if}}
				</div>

				<!-- userwindow -->
				{{> user_window_other}}

			</div>
		</div>
	</div>

<script src="../js/main.js"></script>
</body>

</html>